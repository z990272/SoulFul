@model IEnumerable<Soulful.ViewModels.NewsViewModel>
@foreach (var m in Model)
{
<div class="card" style="width: 100%;">
    <img src="~/Asset/image/@m.Pic" class="card-img-top" alt="...">
    <div class="post_date">
        <span><strong>15</strong> </span>
        <span>June′18</span>
    </div>
    <div class="card_body ">
        <div class="card_content">
            <a id="title" href="#">@m.Title</a>
            <div class="blog_meta">
                <p class="author">
                    BY
                    <a href="#">Admin</a>
                    IN
                    <a href="#">Events</a>
                    <a href="#">2 Comments</a>
                </p>
            </div>

            <p class="card_text">
                @m.About
            </p>
            <div class="readmore_button_div">
                <button class="readmore_button" id="readmore_button1">Read more...</button>
            </div>
        </div>
    </div>
</div>

}