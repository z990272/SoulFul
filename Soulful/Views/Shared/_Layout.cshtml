<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soulful</title>
    <script src="https://kit.fontawesome.com/4b2c9cbe81.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    <link href="~/Asset/css/home_header.css" rel="stylesheet" />
    <link href="~/Asset/css/home_footer.css" rel="stylesheet" />
    <link href="~/Asset/css/_layout.css" rel="stylesheet" />
    @RenderSection("topCSS", required: false)
    @RenderSection("topJS", required: false)
</head>
<body>

    <header class="header-area py-2 ">
        <div class="container">
            <div class="row">
                <nav class="navbar navbar-expand-lg w-100">
                    @Html.ActionLink("SOULFUL", "Index", "Home")
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <div class="navbar-toggler-icon">
                            <div></div>
                            <div></div>
                            <div></div>
                        </div>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                @Html.ActionLink("Album", "Albums", "Album")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Event", "Index", "Event")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Contact", "Contact", "Contact")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Login", "Login", "Account")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Register", "Register", "Account")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Pay", "PayView", "Pay")
                            </li>
                        </ul>

                        <a href="#" type="button" class="cart_btn p-3 " data-toggle="modal" data-target="#modalPoll-1" style="background-color:transparent">
                            <i class="fa fa-cart-plus" aria-hidden="true" style="color:#ffffff"></i>
                        </a>


                        <div class="modal fade right " id="modalPoll-1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                             aria-hidden="true" data-backdrop="false">
                            <div class="modal-dialog modal-full-height modal-right modal-notify modal-info ml-auto mr-0 mt-5 border-0" role="document" style="max-height:80%">
                                <div class="modal-content">
                                    <!--Header-->
                                    <div class="modal-header">
                                        <p class="heading lead">
                                            購物車
                                        </p>

                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true" class="white-text">×</span>
                                        </button>
                                    </div>

                                    <!--Body-->
                                    <div class="modal-body ">

                                        <div class="main " style="box-sizing:border-box;">
                                            <div class="first d-flex ">
                                                <div class="left w-50 p-3 ">
                                                    <img src="~/Asset/image/劉若英-我要你好好的.jpg" style="width:100%" />
                                                </div>
                                                <div class="right w-50 p-3">
                                                    <p>劉若英-我要你好好的</p>
                                                    <p>價錢:3000</p>
                                                    <p>庫存量:100</p>
                                                    <div class="count d-flex  ">
                                                        <button type="button" class="btn btn-info minus">-</button>

                                                        <input class="w-25" value="1" type="text" />

                                                        <button type="button" class="btn btn-info add">+</button>

                                                        <button type="button" class="btn btn-info ml-3">移除</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="main " style="box-sizing:border-box;">
                                            <div class="d-flex ">
                                                <div class="left w-50 p-3 ">
                                                    <img src="~/Asset/image/杜娃黎波-流行先鋒.jpg" style="width:100%" />
                                                </div>
                                                <div class="right w-50 p-3">
                                                    <p>杜娃黎波-流行先鋒</p>
                                                    <p>價錢:2000</p>
                                                    <p>庫存量:200</p>
                                                    <div class="count d-flex ">
                                                        <button type="button" class="btn btn-info minus">-</button>
                                                        <input class="w-25" value="1" type="text" />
                                                        <button type="button" class="btn btn-info add">+</button>

                                                        <button type="button" class="btn btn-info ml-3">移除</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--Basic textarea-->
                                        <div class="md-form">
                                            <label for="form79textarea">備註</label>
                                            <textarea type="text" id="form79textarea" class="md-textarea form-control" rows="3"></textarea>
                                        </div>
                                        <div class="total">
                                            <p>總金額:</p>
                                        </div>

                                        <!--Footer-->
                                        <div class="modal-footer justify-content-center">
                                            <a href="#" type="button" class="btn btn-outline-info waves-effect" data-dismiss="modal">前往結帳</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>




    @RenderBody()


    <section class="contact-area">


        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <p>See what’s new</p>
                        <h2>GET IN TOUCH</h2>
                    </div>
                </div>
            </div>
            <div class="row py-5">
                <div class="col-md-6 col-lg-4">
                    <div class="form-group">
                        <input type="text" class="form-name" id="name" placeholder="Name" style="color: #fff;">
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="form-group">
                        <input type="text" class="form-email" id="email" placeholder="E-mail" style="color: #fff;">
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="form-group">
                        <input type="text" class="form-subject" id="subject" placeholder="Subject" style="color: #fff;">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-message">
                        <input type="text" class="form-message" id="message" placeholder="Message" style="color: #fff;">
                    </div>
                </div>
            </div>
            <div class="row py-5">
                <div class="col-12 text-center">
                    <button class="send-btn" onclick="Send()">send >></button>
                </div>
            </div>
        </div>
    </section>
    <footer class="foot-layout">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6">
                    <h4 class="foot-title">SoulFul</h4>
                    <p class="foot-txt">
                        Copyright ©2020 All rights reserved | This template is made with by Colorlibs
                    </p>
                </div>
                <div class="col-12 col-md-6 foot-nav-box">
                    <div class="foot-nav">
                        <ul class="foot-ul">
                            <li class="nav-item">
                                @Html.ActionLink("SOULFUL", "Index", "Home")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Album", "Albums", "Album")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Event", "Index", "Event")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Contact", "Contact", "Contact")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/Asset/js/navbar.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)

    @RenderSection("endCSS", required: false)
    @RenderSection("endJS", required: false)

@section endJS{
    <script src="~/Asset/js/Layout.js"></script>
}
</body>
</html>
