@model Soulful.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "註冊";
}

@section topCSS{

    <link href="~/Asset/css/Register.css" rel="stylesheet" />
}


<section class="head_area">
    <div class="container-fluid">
        <div class="row">
            <div class="head_img"></div>
            <div class="head_txt">
                <p>See what's new</p>
                <h2>Register</h2>
            </div>
        </div>
    </div>
</section>
<div class="container form-box p-xl-5">
    <div class="row">
        @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h4 class="google text-center">使用google註冊。</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p class="col-12 text-info">
                您已成功向下列單位驗證: <strong>@ViewBag.LoginProvider</strong>。
                請在下面輸入此網站的使用者名稱，然後按一下 [註冊] 按鈕完成
                登入。
            </p>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" class="btn btn-default" value="註冊" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
