@model Soulful.Models.Order

@{
    ViewBag.Title = "Details";
}

@section topCSS{
    <link href="~/Asset/css/UserOrder.css" rel="stylesheet" />
}


<section class="head_area">
    <div class="container-fluid">
        <div class="row">
            <div class="head_img"></div>
            <div class="head_txt">
                <p>See what's new</p>
                <h2>Details</h2>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
        <table class="table my-5 text-center">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().Album.Album_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().Price)
                </th>


                <th></th>
            </tr>

            @foreach (var item in Model.OrderDetail)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Album.Album_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
        </table>
            @Html.ActionLink("Back to List", "Index","",new { @class="btn btn-danger mx-auto my-5"})
    </div>
</div>

