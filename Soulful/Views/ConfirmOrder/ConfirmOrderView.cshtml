
@{
    ViewBag.Title = "ConfirmOrderView";
}
@section topCSS{
    <link href="~/Asset/css/Cheack.css" rel="stylesheet" />
}

<section class="pic">
    <div class="block"></div>
    <div class="bradcumb-content">
        <p>I Like It</p>
        <h4>ConfirmOrder</h4>
    </div>
</section>
<div class="confirm">
    <div class="container buy-program-box ">
        <div class="row">
            <div class="col-12 buy-program">
                <div class="alert" style="width: 550px;background-color: #7f6649;color: #fff;" role="alert">
                    確認購物清單 <i class="fas fa-arrow-circle-right"></i>
                </div>
                <div class="alert" style="width: 550px;color: #7f6649;" role="alert">
                    選擇付款方式 <i class="fas fa-cart-arrow-down"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 statistics">
                <table class="table-box">
                    <tbody>
                    <thead class="thead-box">
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>UnitPrice</th>
                    <th>Delete</th>
                    </thead>
                    <tr class="tbody-tr">
                        <td><img src="https://fakeimg.pl/100/"></td>
                        <td style="font-size:large;font-weight: bold;">1</td>
                        <td style="font-size:large;font-weight: bold;">100</td>
                        <td style="font-size:large;font-weight: bold;color: black;"><i class="fas fa-trash-alt"></i></td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>
        <div class="container">
            <div class="row text-center">
                <div class="col-12 col-md-4 money"><button type="button" class="btn btn-keep-buy">KeepBuy</button></div>
                <div class="col-12 col-md-4 money"> <button type="button" class="btn btn-secondary">Next</button></div>
                <div class="col-12 col-md-4 btn-box">
                    <span class="total"><i class="fas fa-donate" style="font-weight: bolde;">Count</i></span>
                    <p><i class="fas fa-coins"></i>$200</p>

                </div>
            </div>
          
        </div>
    </div>
</div>