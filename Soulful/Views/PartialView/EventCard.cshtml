
@{
    ViewBag.Title = "EventCard";
}

@for (int i = 1; i <= 9; i++)
{
    @Html.Partial("_EventCardPartial")
}

@section topCSS{
    <style>
        .event_area{
            padding: 100px;
        }

        .event_area .event_meta{
            width: 100%;
            padding: 15px 0;
        }

        .event_area img{
            width: 100%;
        }

        .event_area .event_txt{
            width: 100%;
            text-align: center;
            position: relative;
            z-index: 1;
            background-color: #000;
            color: #fff;
            padding: 35px 15px;
        }

        .event_area h4,
        .event_area h4:focus{
            color: #fff !important;
            margin-bottom: 8px;
        }

        .event_area .event_data{
            margin-bottom: 30px;
        }


        .event_area .see_more_btn{
            width: 150px;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 5px;
            border-bottom: 1px solid #fff;
        }

        .event_meta:hover .see_more_btn{
            border-bottom: 1px solid #000;
        }

        .event_meta:hover .event_txt h4,
        .event_meta:hover .event_txt a,
        .event_meta:focus .event_txt h4,
        .event_meta:focus .event_txt a{
            color: #000000 !important; }


        .event_meta:hover .event_txt,
        .event_meta:focus .event_txt {
            background-color: #f5f9fa;
            transition-duration: 500ms;
        }

        .event_area a{
            text-decoration: none;
            color: #fff;
        }
    </style>
}
    

